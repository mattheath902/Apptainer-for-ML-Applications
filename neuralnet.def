# Apptainer Definition File

# Use the Python 3.10 slim image as the base
From: python:3.10-slim

# Metadata
%labels
    Author: YourName
    Version: v1.0

# Copy the project files into the container
%files
    . /opt/myproject

# Post-build commands
%post
    apt-get update && apt-get install -y \
        git \
        wget \
        curl \
        unzip \
        python3-pip \
        git \
        zip \
        unzip \
        wget \
        curl \
        htop \
        libgl1 \
        libglib2.0-0 \
        libpython3-dev \
        gnupg \
        g++ \
        libusb-1.0-0 \
        default-jre \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

    pip install --upgrade pip
    cd /opt/myproject
    pip install -r requirements.txt

# Set environment variables
%environment
    export LC_ALL=C
    export PYTHONUNBUFFERED=1

# Run script (default execution)
%runscript
    echo "YOLO + Transformers container ready ðŸš€"
    exec "$@"
