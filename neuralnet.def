Bootstrap: docker
From: python:3.10-slim

%labels
    Author YourName
    Version v1.0

%files
    requirements.txt /tmp/requirements.txt

%post
    apt-get update && apt-get install -y \
        git \
        wget \
        curl \
        unzip \
        libglib2.0-0 \
        libsm6 \
        libxext6 \
        libxrender-dev \
        && apt-get clean \
        && rm -rf /var/lib/apt/lists/*

    pip install --upgrade pip
    pip install -r /tmp/requirements.txt

%environment
    export LC_ALL=C
    export PYTHONUNBUFFERED=1

%runscript
    echo "YOLO + Transformers container ready ðŸš€"
    exec "$@"
