Bootstrap: docker
From: python:3.10-slim

%post
    apt-get update && apt-get install -y \
        git \
        curl \
        vim \
        build-essential \
        cmake \
        libgl1 \
        libglib2.0-0 \
        libgtk2.0-dev \
        libavcodec-dev \
        libavformat-dev \
        libswscale-dev \
        libxvidcore-dev \
        libx264-dev \
        libjpeg-dev \
        libpng-dev \
        libtiff-dev \
        && rm -rf /var/lib/apt/lists/*
    
    pip install --upgrade pip
    pip install numpy opencv-python

%environment
    export PYTHONUNBUFFERED=1
    export LC_ALL=C.UTF-8
    export LANG=C.UTF-8

%labels
    Author 
    Project Apptainer-ML-OpenCV

%runscript
    echo "Starting ML App with NumPy and OpenCV"
    exec python "$@"

